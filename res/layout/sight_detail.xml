<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#FFFFFF" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/arrow"
            android:text="景点详情"
            android:background="#00000000"
            android:textSize="14sp" />
		
        <ImageButton
            android:id="@+id/collectButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            android:src="@drawable/collect" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/collectButton"
            android:gravity="center"
            android:text="@string/collect"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/sight_view"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/home_one" />

   

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relativeLayout1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    

    <TextView
        android:id="@+id/sight_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sight_view"
        android:inputType="textMultiLine"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView0"
        android:layout_above="@+id/sight_message" >
        
        <ListView
            android:id="@+id/sight_activities"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
        
	</LinearLayout>

	<Button
	    android:id="@+id/sight_message"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/city_name"
	    android:layout_alignParentBottom="true"
	    android:text="@string/comments" />

	<TextView
	    android:id="@+id/textView0"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	   android:layout_marginLeft="10dp"
	    android:layout_below="@+id/sight_describe"
	    android:text="活动：" />

	<ImageView
	    android:id="@+id/imageView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    
	    android:layout_below="@+id/sight_describe"
	    android:src="@drawable/shu_1" />

	<Button
	    android:id="@+id/launch_activity"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_toLeftOf="@+id/sight_message"
	    android:text="@string/activity_lancher" />

</RelativeLayout>